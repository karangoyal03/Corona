    <div class="row">
        <div class="col-sm-12" style="background-color: burlywood;margin-top:50px;">
            <h1 class="display-2" style="color: indigo;text-align:center;">
                <b>CORONA CASES</b>
            </h1>
        </div>

    </div>


    <div class="input-group mb-3" style=" width:60%;margin:auto;margin-top: 60px;">
        <input id="inp" type="text" class="form-control" placeholder="Country name" aria-label="Recipient's username"
            aria-describedby="button-addon2" style="background-color: rgb(139, 245, 210);text-align:center;">
        <div class="input-group-append">
            <button class="btn btn-outline-warning" type="button" onclick="doingrequest()">
                Search</button>
        </div>
    </div>

    <h2 class="display-2" style="text-align: center;margin-top:50px;color:white">
        Country : <span style="color:#8ACA2B;" id="countryname">--</span>
    </h2>

    <div class="row" style="margin-top: 100px;">
        <div class="card " style="margin-left:100px;margin-top:50px;width:20rem;height:fit-content">
            <img src="https://media.giphy.com/media/UUsOy6IWmzw6mmeOpQ/giphy.gif" class="card-img-top" alt="corona img"
                style="width: 318px;height:178px;">
            <div class="card-body">

                <h1 class="card-text " style="text-align: center;">Active Cases</h1>

                <h1 class="display-3" style="color: grey;text-align:center;margin-bottom:0px;" id="active">--</h1>
            </div>
        </div>
        <div class="card " style="margin-left:100px;margin-top:50px;width:20rem;height:fit-content">
            <img src="https://media.giphy.com/media/dVuyBgq2z5gVBkFtDc/giphy.gif " class="card-img-top" alt="corona img"
                style="width: 318px;">
            <div class="card-body">

                <h1 class="card-text " style="text-align: center;">DEATHS</h1>

                <h1 class="display-3" style="color: black;text-align:center;margin-bottom:0px;" id="death">--</h1>
            </div>
        </div>
        <div class="card " style="margin-left:100px;margin-top:50px;width:20rem;height:fit-content">
            <img src="corona.jpg" class="card-img-top" alt="corona img" style="width: 318px;">
            <div class="card-body">

                <h1 class="card-text " style="text-align: center;">Recovered</h1>

                <h1 class="display-3" style="color: #8ACA2B;;text-align:center;margin-bottom:0px;" id="recovery">--</h1>
            </div>
        </div>

    </div>

    <div class="container" style="margin-top: 100px;background-color:white;">
        <canvas id="activecaseschart"></canvas>
    </div>
    <div class="container" style="margin-top: 100px;background-color:white;">
        <canvas id="deathcaseschart"></canvas>
    </div>

    <div class="container" style="margin-top:100px;margin-bottom:30px;background-color:white;">
        <canvas id="recoveredcaseschart"></canvas>
    </div>




